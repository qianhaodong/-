<view class="search-result">
  <view wx:if="{{!searchList.length}}">
    <search-key wx:if="{{history_list.length}}" catchquerySelected="onQuerySelected" hot-list="{{history_list}}">历史搜索</search-key>
    <search-key catchquerySelected="onQuerySelected" hot-list="{{hot_list}}">热门搜索</search-key>
  </view>
  <block wx:else>
    <book-list book-list="{{searchList}}"></book-list>
  </block>
</view>