.classic-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
}

.l-msg {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #000;
}

.order {
  align-items: flex-end;
}

.num {
  font-size: 58rpx;
  font-weight: bold;
}

.line {
  margin: 0 15rpx;
  width: 2px;
  height: 42rpx;
  background-color: #000;
}

.date {
  font-size: 20rpx;
}

.month {
  font-size: 24rpx;
  display: block;
  letter-spacing: 2rpx;
}

.r-msg {
  display: flex;
  align-items: center;
}

.share {
  width: 28rpx;
  height: 28rpx;
  margin-left: 44rpx;
}