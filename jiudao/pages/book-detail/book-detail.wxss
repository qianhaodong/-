page {
  background-color: #f5f5f5;
}

.book-detail-container {
  display: flex;
  flex-direction: column;
}

.book-content {
  padding-top: 110rpx;
  padding-bottom: 90rpx;
}

.book-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-top: 20rpx;
  background-color: #fff;
}

.book-img {
  width: 200rpx;
  height: 300rpx;
  box-shadow:0 0 28rpx 8rpx #eee;
  margin-bottom: 24rpx;
}

.book-name {
  margin-bottom: 4rpx;
  font-size: 38rpx;
  color: #000;
}

.book-author {
  font-size: 28rpx;
  color: #999;
}

.book-comment {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding: 20rpx 20rpx 4rpx;
  background-color: #fff;
}

.comment-content {
  display: flex;
  flex-wrap: wrap;
}

.comment-content text {
  display: block;
  margin: 0 12rpx 20rpx 0;
  padding: 12rpx 24rpx;
  background-color: #f7f7f7;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.book-summary,
.book-info {
  margin-top: 20rpx;
  padding: 30rpx 60rpx 24rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.title {
  margin-bottom: 16rpx;
  font-size: 30rpx;
  color: #292929;
  text-align: center;
}

.summary-content {
  font-size: 28rpx;
  color: #666;
  line-height: 46rpx;
  letter-spacing: 2rpx;
}

.info-content {
  display: flex;
  font-size: 24rpx;
  line-height: 42rpx;
}

.l-msg {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  color: #999;
}

.r-msg {
  display: flex;
  flex-direction: column;
  color: #666;
}

.comment-box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}