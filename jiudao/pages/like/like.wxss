page {
  background-color: #f5f5f5;
}

.like-container {
  display: flex;
  flex-direction: column;
}

.like-hd {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  position: relative;
  width: 100%;
  height: 556rpx;
  z-index: 1;
}

.like-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: -1;
}

.user-info {
  position: relative;
  width: 100%;
  height: 186rpx;
}

.user-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 186rpx;
  border-top: 110rpx solid transparent;
  border-right: 750rpx solid #fff;
  z-index: -1;
}

.about-icon {
  width: 34rpx;
  height: 34rpx;
}