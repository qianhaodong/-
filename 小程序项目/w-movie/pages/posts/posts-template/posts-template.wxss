.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ededed;
  border-top: 1rpx solid #ededed;
  padding-bottom: 5rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author-date image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.post-author-date text {
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  vertical-align: middle;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin: 0 0 10rpx 10rpx;
}

.post-image {
  margin-bottom: 15rpx;
  width: 100%;
  height: 340rpxp;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  align-items: center;
  line-height: 16rpx;
  margin-left: 16rpx;
}

.post-like image {
  height: 16px;
  width: 16px;
  margin-right: 8rpx;
  vertical-align: middle;
}

.post-like text {
  margin-right: 20rpx;
  vertical-align: middle;
}