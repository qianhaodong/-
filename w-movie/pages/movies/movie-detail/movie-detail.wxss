@import "../../template/stars-template/stars-template.wxss";

.movie-detail {
  display: flex;
  flex-direction: column;
}

.hd-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(16px);
}

.hd-img-cover {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 320rpx;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin: 50rpx 0 0 40rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin: 30rpx 0 0 40rpx;
}

.like {
  display: flex;
  margin: 30rpx 0 0 40rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #999;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.flex-row {
  display: flex;
  margin-bottom: 10rpx;
}

.summary {
  margin: 40rpx 0 0 40rpx;
  color: #777;
}

.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}

.mark {
  margin-right: 30rpx;
  color: #999;
  white-space: nowrap;
}

.synopsis {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
  color: #333;
}

.summary-content {
  padding-top: 20rpx;
  text-indent: 48rpx;
  line-height: 48rpx;
}

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}
