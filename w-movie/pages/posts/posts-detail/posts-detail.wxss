.posts-detail {
  display: flex;
  flex-direction: column;
}

.top-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date {
  margin: 20rpx 0 0 40rpx;
  font-size: 24rpx;
  color: #999;
  flex-direction: row;
}

.author-date image {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author-date text:nth-of-type(1) {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.author-date text:nth-of-type(2) {
  margin-left: 20rpx;
  vertical-align: middle;
}

.author-date text:nth-of-type(3) {
  margin-left: 30rpx;
  vertical-align: middle;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  position: relative;
  margin: 0 40rpx;
  box-sizing: border-box;
  height: 2rpx;
  background-color: #e5e5e5;
}

.tool image {
  position: absolute;
  top: -50%;
  right: 120rpx;
  transform: translateY(-50%);
  width: 90rpx;
  height: 90rpx;
}

.tool image:nth-of-type(2) {
  right: 0;
}

.detail {
  color: #666;
  margin: 60rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  font-size: 24rpx;
}