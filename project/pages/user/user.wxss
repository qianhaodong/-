/* pages/user/user.wxss */
page {
  background-color: #f5f5f5;
}

.main-hd {
  position: relative;
}

.main-hd-bg {
  width: 100%;
  height: 436rpx;
}

.userinfo {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.userinfo-avatar {
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}

.userinfo-nickname {
  display: block;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.main-bd {
  position: relative;
  top: -12rpx;
  z-index: 10;
}

.item {
  padding: 0 28rpx;
  height: 95rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.item1 {
  margin-bottom: 18rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.item-icon {
  display: flex;
  align-items: center;
  width: 72rpx;
}

.item-icon1 {
  width: 40rpx;
  height: 29rpx;
}

.item-icon2 {
  width: 31rpx;
  height: 35rpx;
}

.item-icon3 {
  width: 29rpx;
  height: 33rpx;
}

.item-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item2 .item-info {
  height: 100%;
  border-bottom: 1rpx solid #dedede;
}

.item-text {
  font-size: 28rpx;
}

.item-arrow {
  /* padding-item: 24rpx; */
  position: relative;
}

.item-arrow:after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 0;
}
